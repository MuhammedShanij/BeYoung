<body>
    <%- include('partials/navbar')%>
    <section class=" d-flex  align-items-center" style="height: 450px;">
    <div class="col-md-4 offset-md-4">
        <form action="/login/otplogin/verification" method="post">

  <%- include('flashes/flash')%>
       
        <div class="mb-3">
          <label for="phno" class="form-label">Enter Your Mobile No</label>
          <input type="number" class="form-control" id="phno" name="phno" value="<%-phno%>">
        </div>
        <div class="mb-3">
            <label for="otp" class="form-label">Enter Your Code</label>
